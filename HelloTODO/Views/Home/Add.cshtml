@{
    Layout = null;
    ViewBag.Title = "Add";
}
@model HelloTODO.Models.Task

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <div>
        <h3>Добавить таск</h3>
        @using (Html.BeginForm("Add", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.Id)
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Description)
                        @Html.TextAreaFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Deadline)
                        @Html.EditorFor(model => model.Deadline)
                        @Html.ValidationMessageFor(model => model.Deadline)
                    </td>
                </tr>
                <tr>
                    <td><p>Приоритет</p></td>
                    <td rowspan="2">
                        <p>Выберите файл для загрузки</p>
                        <input type="file" name="File"/><br>
                    </td>
                </tr>
                <tr>
                    <td><input type="range" min="0" max="5" step="1" value="0" name="Priority" /></td>
                </tr>
                <tr>
                    <td><input type="submit" value="Подтвердить" /> </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
